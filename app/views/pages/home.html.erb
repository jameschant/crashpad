  <div class="row"> 
    <div class="home-properties-card col-md-4">
      <div class="well">
        <%= link_to "Stag Hill", stag_hill_path, class:"h3 text-center" %>
        <p>5 Bed</p>
        <%= link_to image_tag("http://idswebhost.co.uk/guildford/images/4sh/IMAG0092.jpg"), stag_hill_path %>
        <!--class="let"-->
